<Window x:Class="HTTP_REST_CLient.CreateFileWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:HTTP_REST_CLient"
        mc:Ignorable="d"
        Title="CreateFileWindow" Height="450" Width="400">
    <Grid>
        <TextBox x:Name="FileNameTextBox" MaxLength="100" Margin="10,20,10,0" TextWrapping="Wrap" VerticalAlignment="Top" />
        <TextBox x:Name="ContentTextBox" Margin="10,50,10,66" TextWrapping="Wrap" />
        <Button x:Name="CreateButton" Content="Create" Margin="170,0,170,20" Height="20" VerticalAlignment="Bottom" Click="CreateButton_OnClick"/>
        <CheckBox x:Name="IsFolderCheckBox" Content="CreateFolder" HorizontalAlignment="Left" Margin="38,0,0,22" Height="15" VerticalAlignment="Bottom" Click="IsFolderCheckBox_OnClick"/>
    </Grid>
</Window>